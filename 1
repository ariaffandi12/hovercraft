-- Script GUI + Fitur Get All Buildings (Roblox Lua)
-- Tempatkan ini di LocalScript dalam StarterGui

--===[ GUI SETUP ]===--
local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

local screenGui = Instance.new("ScreenGui")
screenGui.Name = "HovercraftGUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

-- Frame utama
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 300, 0, 180)
mainFrame.Position = UDim2.new(0.3, 0, 0.3, 0)
mainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
mainFrame.BorderSizePixel = 0
mainFrame.Active = true
mainFrame.Draggable = true
mainFrame.Parent = screenGui

-- Judul
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 30)
title.BackgroundTransparency = 1
title.Text = "[Hovercraft] War Tycoon"
title.TextColor3 = Color3.new(1, 1, 1)
title.Font = Enum.Font.SourceSansBold
title.TextSize = 20
title.Parent = mainFrame

-- Tombol Minimize
local minimize = Instance.new("TextButton")
minimize.Size = UDim2.new(0, 25, 0, 25)
minimize.Position = UDim2.new(1, -55, 0, 5)
minimize.Text = "-"
minimize.TextSize = 18
minimize.Font = Enum.Font.SourceSansBold
minimize.TextColor3 = Color3.new(1,1,1)
minimize.BackgroundColor3 = Color3.fromRGB(50,50,50)
minimize.Parent = mainFrame

-- Tombol Exit
local exit = Instance.new("TextButton")
exit.Size = UDim2.new(0, 25, 0, 25)
exit.Position = UDim2.new(1, -25, 0, 5)
exit.Text = "x"
exit.TextSize = 18
exit.Font = Enum.Font.SourceSansBold
exit.TextColor3 = Color3.new(1,0.3,0.3)
exit.BackgroundColor3 = Color3.fromRGB(50,50,50)
exit.Parent = mainFrame

-- Tombol MAIN
local mainButton = Instance.new("TextButton")
mainButton.Size = UDim2.new(0.8, 0, 0, 40)
mainButton.Position = UDim2.new(0.1, 0, 0.4, 0)
mainButton.Text = "Main (Get All Buildings)"
mainButton.TextSize = 16
mainButton.Font = Enum.Font.SourceSansSemibold
mainButton.TextColor3 = Color3.new(0,1,0)
mainButton.BackgroundColor3 = Color3.fromRGB(40, 100, 40)
mainButton.Parent = mainFrame

-- Tombol INFO
local infoButton = Instance.new("TextButton")
infoButton.Size = UDim2.new(0.8, 0, 0, 40)
infoButton.Position = UDim2.new(0.1, 0, 0.7, 0)
infoButton.Text = "Info"
infoButton.TextSize = 16
infoButton.Font = Enum.Font.SourceSans
infoButton.TextColor3 = Color3.new(1,1,1)
infoButton.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
infoButton.Parent = mainFrame

--===[ LOGIKA TOMBOL ]===--

-- Fungsi Minimize
local minimized = false
minimize.MouseButton1Click:Connect(function()
    minimized = not minimized
    for _, child in pairs(mainFrame:GetChildren()) do
        if child ~= title and child ~= minimize and child ~= exit then
            child.Visible = not minimized
        end
    end
end)

-- Fungsi Exit
exit.MouseButton1Click:Connect(function()
    screenGui:Destroy()
end)

-- Fungsi Get All Buildings
local function getAllBuildings()
    local tycoon = workspace:FindFirstChild("Tycoons"):FindFirstChild(player.Name .. "_Tycoon")
    if not tycoon then return end

    local buildings = tycoon:FindFirstChild("Buildings")
    if not buildings then return end

    for _, building in pairs(buildings:GetChildren()) do
        if building:FindFirstChild("BuyPrompt") then
            building.BuyPrompt:Destroy()
        end
        if building:FindFirstChild("Model") then
            building.Model.Visible = true
        end
        if building:FindFirstChild("Built") then
            building.Built.Value = true
        end
    end
end

mainButton.MouseButton1Click:Connect(getAllBuildings)

-- Fungsi Info
infoButton.MouseButton1Click:Connect(function()
    game.StarterGui:SetCore("SendNotification", {
        Title = "Info Developer";
        Text = "Game by @Riee | Hovercraft War Tycoon";
        Duration = 5;
    })
end)

--===[ SELESAI ]===--
